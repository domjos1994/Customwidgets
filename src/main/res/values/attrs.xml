<resources>
    <declare-styleable name="LabelledSeekBar">
        <attr name="editableLabel" format="boolean"/>
        <attr name="max" format="integer"/>
        <attr name="current" format="float"/>
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="title" format="string" />
        <attr name="text" format="string" />
    </declare-styleable>

    <declare-styleable name="SwipeRefreshDeleteList">
        <attr name="itemIcon" format="integer"/>
        <attr name="listItemBackground" format="integer"/>
        <attr name="listItemBackgroundStatePositive" format="integer"/>
        <attr name="listItemForeground" format="color"/>
        <attr name="selectedListItemBackground" format="integer"/>
        <attr name="readOnly" format="boolean"/>
        <attr name="listItemDivider" format="integer"/>
        <attr name="iconColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="WidgetCalendar">
        <attr name="toolBarBackground" format="integer"/>
        <attr name="monthViewBackground" format="integer"/>
        <attr name="dayViewBackground" format="integer"/>
        <attr name="focusBackground" format="integer"/>
        <attr name="groupLabelWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SplitPaneLayout">
        <attr name="orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="splitterSize" format="dimension" />
        <attr name="splitterMovable" format="boolean" />
        <attr name="splitterPosition" format="dimension|fraction" />
        <attr name="splitterBackground" format="reference|color" />
        <attr name="splitterDraggingBackground" format="reference|color" />
        <attr name="splitterTouchSlop" format="dimension" />
        <!-- TODO: Also support fraction values-->
        <attr name="paneSizeMin" format="dimension" />
    </declare-styleable>
</resources>